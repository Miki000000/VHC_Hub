@page "/"
@using VHC_Erp.frontend.Features.User
@inject IDialogService DialogService

<MudButton OnClick="CreateUser" Variant="Variant.Filled" Color="Color.Primary">Create User<MudIcon Icon="@Icons.Material.Filled.Person"/></MudButton>

@code
{
    void CreateUser()
    {
        var options = new DialogOptions { FullWidth = true, CloseOnEscapeKey = true};
        DialogService.Show<RegisterUserAsync>("Register User Async", options);
    }
}
